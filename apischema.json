{
    "openapi":"3.0.3",
    "info": {
      "title":"Amigobuzz",
      "version":"1.0"
    },
    "servers": [
      {"url":"https://buzz.vvill.dev"},
      {"url":"https://buzz.snakej.org"}
    ],
    "paths": {
        "/": {
            "get": {
                "description": "If auth'd, returns home page. Otherwise, returns login page.",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "tags": ["HTML"]
            }
        },
        "/login": {
            "post": {
                "description": "Attempt login, returns session token",
                "parameters": [
                    {
                        "name": "username",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "otp",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Missing field(s)"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                },
                "tags": ["Auth"]
            }
        },
        "/logout": {
            "post": {
                "description": "Removes the user's session token from memory",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Missing session token"
                    }
                },
                "tags": ["Auth"]
            }
        },
        "/alarm": {
            "get": {
                "description": "Get the alarm status",
                "security": [{"BearerAuth": ["token"]}],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Alarm"]
            },
            "post": {
                "description": "Set off the alarm",
                "security": [{"BearerAuth": ["token"]}],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "208": {
                        "description": "Alarm already on"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Alarm"]
            },
            "delete": {
                "description": "Turn off the alarm",
                "security": [{"BearerAuth": ["token"]}],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "208": {
                        "description": "Alarm already off"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Alarm"]
            },
            "patch": {
                "description": "Change the alarm volume",
                "security": [{"BearerAuth": ["token"]}],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "208": {
                        "description": "Volume already at this level"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Alarm"]
            }
        },
        "/audio": {
            "get": {
                "description": "Get the list of available audios",
                "security": [{"BearerAuth": ["token"]}],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Audio"]
            },
            "post": {
                "description": "Upload a new audio",
                "security": [{"BearerAuth": ["token"]}],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Missing audio file"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Audio"]
            }
        },
        "/audios/{id}": {
            "get": {
                "description": "Get an audio option",
                "security": [{"BearerAuth": ["token"]}],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Audio"]
            },
            "delete": {
                "description": "Delete an audio option",
                "security": [{"BearerAuth": ["token"]}],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Audio"]
            },
            "patch": {
                "description": "Update an audio option",
                "security": [{"BearerAuth": ["token"]}],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Missing audio file"
                    },
                    "401": {
                        "description": "Not logged in"
                    }
                },
                "tags": ["Audio"]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
  }